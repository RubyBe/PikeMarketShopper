@{ 
  ViewData["Title"] = "PikeMarketShopper - Register";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@using PikeMarketShopper.ViewModels

@model RegisterViewModel

<h2>Create a New Account</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  <hr />
  <h5>@Html.LabelFor(m => m.Email)</h5>
  <p>@Html.TextBoxFor(m => m.Email)</p>
  <h5>@Html.LabelFor(m => m.Password)</h5>
  <p>@Html.PasswordFor(m => m.Password)</p>
  <h5>@Html.LabelFor(m => m.ConfirmPassword)</h5>
  <p>@Html.PasswordFor(m => m.ConfirmPassword)</p>
  <input type="submit" value="Register" />
}