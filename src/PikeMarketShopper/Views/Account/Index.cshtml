@{ 
  ViewData["Title"] = "PikeMarketShopper - Home Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<div class="page-header">
  <h1>Welcome to the Sentiment Shopper 
    <small>
      A unique online shopping experience for Pike Place Market in Seattle
    </small>
  </h1>
</div>

<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="../img/HighStallCloseup.jpg" alt="High Stalls at Market" >
      <div class="caption">
        <h3>@Html.ActionLink("View Products", "Index", "Products", new { @class = "classLink" })</h3>
        <p>View fresh and artisan products</p>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="../img/WaterFront.jpg" alt="Market View from Elliot Bay">
      <div class="caption">
        <h3>@Html.ActionLink("View Shops", "Index", "Shops")</h3>
        <p>Visit the market Shops</p>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="../img/Potatoes.jpg" alt="Closeup of High Stall Potatoes">
      <div class="caption">
        <h3>@Html.ActionLink("Shop for Me", "Create", "Cart")</h3>
        <p>We can provide an intuitively tailored package of the best of Pike Place Market</p>
      </div>
    </div>
  </div>
</div>

@if (User.Identity.IsAuthenticated)
{
  <h4>Welcome back, @User.Identity.Name!</h4>
}
else
{
<div>
  <hr />
  <h4>@Html.ActionLink("Log in to my account", "Login")</h4>
  <h4>@Html.ActionLink("Create a new account", "Register")</h4>
</div>
}